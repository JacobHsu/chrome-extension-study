{
    "manifest_version": 2,
    "name": "訊息範例-頁面腳本向事件腳本發送訊息",
    "description": "頁面腳本向事件腳本發送訊息",
    "version": "2.0",
    "browser_action": {
        "default_title": "頁面腳本向事件腳本發送訊息",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "48": "icon.png"
      },
    "background": {
        "scripts": ["event.js"],
        "persistent": false
    },
    "externally_connectable": {
        "matches": ["*://localhost/*","*://127.0.0.1/*"]
    },
    "permissions": ["tabs"]
}
